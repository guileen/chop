extends layout

block content

  .row
    .span7
      h1 Welcome to Chop
    .span5
      form.form-horizontal(method='post', action='/login')
        if(locals.message1)
          span = locals.message1
        fieldset
          legend Login
          .control-group
            label.control-label(for='username') Username
            .controls
              input(type='text', name='username')
          .control-group
            label.control-label(for='password') Password
            .controls
              input(type='password', name='password')
        .form-actions
          button.btn.btn-primary(type='submit') Sign in
          button.btn Cancel

      form.form-horizontal(method='post', action='/signup')
        if(locals.message2)
          span = locals.message2
        fieldset
          legend Sign up
          .control-group
            label.control-label(for='username') Username
            .controls
              input(type='text', name='username')
          .control-group
            label.control-label(for='password') Password
            .controls
              input(type='password', name='password')
          .control-group
            label.control-label(for='password') Repeat Password
            .controls
              input(type='password', name='repeat-password')
        .form-actions
          button.btn.btn-primary(type='submit') Sign up
          button.btn Cancel

