extends layout

block content

  .row
    .span6
      h1 Welcome to Chop
    .span5
      form#login-box.form-horizontal(method='post', action='/login')
        if(locals.message1)
          span = locals.message1
        fieldset
          legend Login
          .control-group
            label.control-label(for='username') Username
            .controls
              input(type='text', name='username')
          .control-group
            label.control-label(for='password') Password
            .controls
              input(type='password', name='password')
        .form-actions()
          button.btn.btn-primary(type='submit') Sign in
          button.btn Reset
          button.btn(type='button',onclick='showSignup()') Sign up

      form#signup-box.form-horizontal(method='post', action='/signup',style='display:none')
        if(locals.message2)
          span = locals.message2
        fieldset
          legend Sign up
          .control-group
            label.control-label(for='username') Username
            .controls
              input(type='text', name='username')
          .control-group
            label.control-label(for='password') Password
            .controls
              input(type='password', name='password')
          .control-group
            label.control-label(for='password') Repeat Password
            .controls
              input(type='password', name='repeat-password')
        .form-actions
          button.btn.btn-primary(type='submit') Sign up
          button.btn Reset
          button.btn(type='button',onclick='showLogin()') Sign in

block scripts
  script
    function showSignup(){
       $('#login-box').hide();
       $('#signup-box').show();
    }
    function showLogin(){
       $('#login-box').show();
       $('#signup-box').hide();
    }